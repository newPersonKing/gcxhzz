<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- title -->
    <include layout="@layout/include_title_layout" />
    <!-- 滑动 -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <!-- logo -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:src="@mipmap/ic_launcher" />


            <!-- 用户名 和密码 框 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_52"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20">


                <EditText
                    android:id="@+id/et_login_main_username"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@drawable/shape_corner_border_gray"
                    android:gravity="center_vertical"
                    android:hint="请输入用户名"
                    android:paddingLeft="@dimen/dp_10"
                    android:textColorHint="@color/font_bababa"
                    android:textSize="@dimen/text_size_14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15">

                    <EditText
                        android:id="@+id/et_login_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:background="@drawable/shape_corner_border_gray"
                        android:gravity="center_vertical"
                        android:hint="请输入6-16位密码"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/dp_10"
                        android:textColorHint="@color/font_bababa"
                        android:textSize="@dimen/text_size_14sp" />

                    <ImageView
                        android:id="@+id/iv_login_password_tran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:padding="@dimen/dp_4"
                        android:src="@mipmap/ic_password_visible"
                        android:tag="false" />


                </RelativeLayout>
                <!-- 登陆按钮 -->
                <Button
                    android:id="@+id/btn_login_in"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@drawable/shape_corner_back_blue"
                    android:padding="0dp"
                    android:text="登录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_17sp" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20">

                <TextView
                    android:id="@+id/tv_login_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_20"
                    android:text="注册"
                    android:textColor="@color/font_666666"
                    android:textSize="@dimen/text_size_13sp" />

                <TextView
                    android:id="@+id/tv_login_forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_20"
                    android:text="忘记密码?"
                    android:textColor="@color/font_666666"
                    android:textSize="@dimen/text_size_13sp" />

            </RelativeLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
