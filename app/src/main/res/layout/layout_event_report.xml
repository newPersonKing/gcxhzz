<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/include_title_layout"/>

                <View style="@style/LineH"/>


                <com.algorithm.android.widget.item.ForwardView
                    android:id="@+id/fv_event_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:algorithmLeftText="事件名称"
                    app:algorithmRightText="必填"/>

                <View style="@style/LineH"/>

                <com.algorithm.android.widget.item.ForwardView
                    android:id="@+id/fv_event_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:algorithmLeftText="河段"
                    app:algorithmRightText="必填"/>

                <View style="@style/LineH"/>


                <com.algorithm.android.widget.item.ForwardView
                    android:id="@+id/fv_event_urgency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:algorithmLeftText="紧急程度"
                    app:algorithmRightText="必填"/>

                <View style="@style/LineH"/>
                <com.algorithm.android.widget.item.ForwardView
                    android:id="@+id/fv_event_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:algorithmLeftText="事件来源"
                    app:algorithmRightText="必填"/>

                <View style="@style/LineH"/>

                <com.algorithm.android.widget.item.ForwardView
                    android:id="@+id/fv_event_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:algorithmLeftText="事件内容"
                    app:algorithmRightText="必填"/>

                <View style="@style/LineH"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/white"
                    android:padding="@dimen/space">
                    <TextView
                        android:id="@+id/tv_recycler_view"
                        android:textSize="@dimen/text_size_13sp"
                        android:textColor="@color/font_999999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_93"
                        android:text="最多上传三张图片" />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:text="语音"/>

                    <LinearLayout
                        android:id="@+id/ll_voice_play"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_40"
                        android:orientation="horizontal"
                        android:background="@drawable/voice_backgroun"
                        android:padding="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_voice_play"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/frame_voice_anim"
                            android:layout_marginLeft="@dimen/dp_5"/>

                        <TextView
                            android:id="@+id/tv_voice_length"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:padding="@dimen/dp_5"
                            android:text="3秒"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right">
                        <Button
                            android:id="@+id/btn_voice_delete"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_30"
                            android:text="删除"
                            android:textSize="@dimen/sp_10"
                            android:background="@drawable/shape_border_without_corner"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"/>
                        <Button
                            android:id="@+id/btn_voice_click"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_40"
                            android:text="点击录音"
                            android:textSize="@dimen/sp_10"
                            android:background="@drawable/shape_corner_back_blue"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:text="视频"/>

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_video_play"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:src="@drawable/ic_videocam"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right">
                        <Button
                            android:id="@+id/btn_video_delete"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_30"
                            android:text="删除"
                            android:textSize="@dimen/sp_10"
                            android:background="@drawable/shape_border_without_corner"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"/>

                        <Button
                            android:id="@+id/btn_video_click"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_40"
                            android:text="点击添加"
                            android:textSize="@dimen/sp_10"
                            android:background="@drawable/shape_corner_back_blue"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_recording"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/frame_record_anim"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </FrameLayout>

    </android.support.v4.widget.NestedScrollView>


    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/theme_color"
        android:text="提交"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:elevation="8dp"/>

</LinearLayout>
