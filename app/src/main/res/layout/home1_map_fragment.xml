<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.algorithm.progresslayoutlibrary.ProgressLayout
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--<com.tencent.smtt.sdk.WebView-->
            <!--android:id="@+id/forum_context"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="fill_parent"-->
            <!--android:paddingLeft="5dp"-->
            <!--android:paddingRight="5dp"/>-->

        <com.baidu.mapapi.map.MapView
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.algorithm.progresslayoutlibrary.ProgressLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_15">

        <Button
            android:id="@+id/btn_record"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="巡河日志"
            android:drawableTop="@mipmap/sy_record"
            android:background="@drawable/back_corner"
            android:layout_marginBottom="@dimen/dp_20"
            android:paddingTop="@dimen/dp_5"
            android:textColor="#666666"
            android:textSize="14sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_event"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="事件上报"
            android:drawableTop="@mipmap/sy_event"
            android:background="@drawable/back_corner"
            android:paddingTop="@dimen/dp_5"
            android:textColor="#666666"
            android:textSize="14sp"/>


    </LinearLayout>

    <Button
        android:id="@+id/btn_go_map"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/foot"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"/>

</RelativeLayout>
