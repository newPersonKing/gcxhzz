<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <include layout="@layout/include_title_layout" />

            <View style="@style/LineH" />

            <com.algorithm.android.widget.item.ForwardView
                android:id="@+id/fv_task_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:algorithmLeftText="巡河任务名称"
                app:algorithmRightText="必填"
                app:forwardVisible="false" />

            <View style="@style/LineH" />


            <com.algorithm.android.widget.item.ForwardView
                android:id="@+id/fv_task_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:algorithmLeftText="日期"
                app:algorithmRightText="必填"
                app:forwardVisible="false" />

            <View style="@style/LineH" />

            <com.algorithm.android.widget.item.ForwardView
                android:id="@+id/fv_task_time_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:algorithmLeftText="巡河时间段"
                app:algorithmRightText="必填"
                app:forwardVisible="false" />

            <View style="@style/LineH" />

            <com.algorithm.android.widget.item.ForwardView
                android:id="@+id/fv_task_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:algorithmLeftText="巡河轨迹"
                app:algorithmRightText="必填"
                app:forwardVisible="false" />

            <View style="@style/LineH" />


            <com.algorithm.android.widget.item.ForwardView
                android:id="@+id/fv_task_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:algorithmLeftText="河段"
                app:algorithmRightText="必填"
                app:forwardVisible="false" />

            <View style="@style/LineH" />


            <com.algorithm.android.widget.item.ForwardView
                android:id="@+id/fv_task_quesstion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:algorithmLeftText="发现问题"
                app:algorithmRightText="必填" />

            <View style="@style/LineH" />

            <com.algorithm.android.widget.item.ForwardView
                android:id="@+id/fv_task_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:algorithmLeftText="巡河内容"
                app:algorithmRightText="必填" />

            <View style="@style/LineH" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:color/white"
                android:padding="@dimen/space">

                <TextView
                    android:id="@+id/tv_recycler_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_93"
                    android:text="最多上传三张图片"
                    android:textColor="@color/font_999999"
                    android:textSize="@dimen/text_size_13sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="84dp" />
            </FrameLayout>


            <View style="@style/LineH"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_5"
                    android:text="语音"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"/>

                <LinearLayout
                    android:id="@+id/ll_voice_play"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal"
                    android:background="@drawable/voice_backgroun"
                    android:padding="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dp_25"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_voice_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/frame_voice_anim"
                        android:layout_marginLeft="@dimen/dp_5"/>

                    <TextView
                        android:id="@+id/tv_voice_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:padding="@dimen/dp_5"
                        android:text="3秒"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:id="@+id/btn_voice_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="删除"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        android:layout_marginRight="@dimen/dp_10"/>
                    <TextView
                        android:id="@+id/btn_voice_click"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加"
                        android:clickable="true"/>
                </LinearLayout>
            </RelativeLayout>

            <View style="@style/LineH"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_5"
                    android:text="视频"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"/>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_video_play"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100"
                    android:src="@drawable/ic_videocam"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10">
                    <TextView
                        android:id="@+id/btn_video_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="删除"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_10"
                        android:clickable="true"/>

                    <TextView
                        android:id="@+id/btn_video_click"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加"
                        android:clickable="true"/>
                </LinearLayout>
            </RelativeLayout>

            <View style="@style/LineH"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/theme_color"
        android:text="提交"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:elevation="8dp"/>

</LinearLayout>
